<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Timer"
        android:textSize="50dp"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09"
        android:textColor="#E8777D"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set study session"
        android:id="@+id/textView10"
        android:textColor="#3D3F40"
        android:fontFamily="sans-serif-thin"
        android:textSize="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/StudyTime"
        android:progress="50"
        android:max="120"
        android:fontFamily="sans-serif-thin"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="50 min"
        android:id="@+id/StudySNumber"
        android:textColor="#3D3F40"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"
        android:layout_below="@+id/StudyTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set break session"
        android:id="@+id/textView9"
        android:textColor="#3D3F40"
        android:fontFamily="sans-serif-thin"
        android:textSize="30dp"
        android:layout_below="@+id/StudyTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PauseTime"
        android:max="30"
        android:progress="10"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10 min"
        android:id="@+id/BreakSNumber"
        android:textColor="#3D3F40"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"
        android:layout_below="@+id/PauseTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set study time"
        android:id="@+id/textView8"
        android:textColor="#3D3F40"
        android:fontFamily="sans-serif-thin"
        android:textSize="30dp"
        android:layout_below="@+id/PauseTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TotalTime"
        android:max="300"
        android:progress="120"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/BreakSNumber"
        android:layout_alignStart="@+id/BreakSNumber"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="120 min"
        android:id="@+id/StudyNumber"
        android:layout_gravity="center_horizontal"
        android:textColor="#3D3F40"
        android:fontFamily="sans-serif-thin"
        android:textSize="20dp"
        android:layout_above="@+id/setBtn"
        android:layout_alignLeft="@+id/StudySNumber"
        android:layout_alignStart="@+id/StudySNumber"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/setBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#E8777D"
        android:background="#ECECEC"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-thin"
        android:stateListAnimator="@null"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false" />

</LinearLayout>