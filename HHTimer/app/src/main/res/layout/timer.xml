<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC">

    <SeekBar
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:id="@+id/StudyTime"
        android:progress="50"
        android:max="120"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="50 min"
        android:id="@+id/StudySNumber"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/StudyTime"
        android:layout_toRightOf="@+id/StudyTime"
        android:layout_toEndOf="@+id/StudyTime"
        android:textColor="#000000" />

    <SeekBar
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:id="@+id/PauseTime"
        android:max="30"
        android:progress="10"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <SeekBar
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:id="@+id/TotalTime"
        android:max="300"
        android:progress="120"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/setBtn"
        android:layout_gravity="center_horizontal"
        android:textColor="#E8777D"
        android:background="#ECECEC"
        android:layout_below="@+id/TotalTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set study session"
        android:id="@+id/textView8"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set break session"
        android:id="@+id/textView9"
        android:textColor="#000000"
        android:layout_below="@+id/StudyTime"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set study time"
        android:id="@+id/textView10"
        android:textColor="#000000"
        android:layout_below="@+id/PauseTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10 min"
        android:id="@+id/BreakSNumber"
        android:layout_gravity="right"
        android:textColor="#000000"
        android:layout_alignTop="@+id/PauseTime"
        android:layout_toRightOf="@+id/PauseTime"
        android:layout_toEndOf="@+id/PauseTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="120 min"
        android:id="@+id/StudyNumber"
        android:layout_gravity="right"
        android:textColor="#000000"
        android:layout_alignTop="@+id/TotalTime"
        android:layout_toRightOf="@+id/TotalTime"
        android:layout_toEndOf="@+id/TotalTime" />

</RelativeLayout>